@model EmprestimoModel
@{
    ViewData["title"] = "Excluir Emprestimo";
}
<div class="container bg-dark p-5" rounded-5>
    <div class="mb-5 text-center">
        <h1 class="text-light">Exclusão de Empréstimos</h1>
    </div>

    <form method="post" asp-controller="Emprestimo" asp-action="Excluir">
        <input type="hidden" asp-for="Id" />
        <h2 class="text-light">Esta ação será irreversivel tem certeza que deseja excluir este registro?</h2>
        <div class="mb-3">
            <label for="Funcionario" class="form-label text-light">Nome do Funcioário:</label>
            <input type="text" class="form-control text-black" asp-for=" NomeFuncionario" id="Funcionario" placeholder="Quem está pegando o material" disabled>
            <span class="text-danger" asp-validation-for="NomeFuncionario"></span>

            <div class="mb-3">
                <label for="Fornecedor" class="form-label text-light">Quem esta emprestando:</label>
                <input type="text" class="form-control text-black" asp-for=" Fornecedor" id="Fornecedor" placeholder="Quem está fornecendo o material" disabled>
                <span class="text-danger" asp-validation-for="Fornecedor"></span>

            </div>
            <div class="mb-3">
                <label for="Produto" class="form-label text-light">Nome do Produto ou Material:</label>
                <input type="text" class="form-control text- text-black" asp-for=" MaterialEmprestado" id="Material" placeholder="Material que esta sendo emprestado!" disabled>
                <span class="text-danger" asp-validation-for="NomeFuncionario"></span>

            </div>

        <div class="d-flex gap-5 mt-5">
            <button type="submit" class="btn btn-danger w-50"><i class="bi bi-trash3-fill mx-3"></i>Excluir</button>
            <a class="btn btn-primary w-50" asp-controller="Emprestimo" asp-action="Index"><i class="bi bi-arrow-90deg-left mx-3"></i>Voltar</a>
        </div>



    </form>
</div>>