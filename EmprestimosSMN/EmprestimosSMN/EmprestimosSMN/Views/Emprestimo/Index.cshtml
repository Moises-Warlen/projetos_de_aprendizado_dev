@model IEnumerable<EmprestimoModel>

<div class="container">
<div class="d-flex justify-content-between align-items-center mb-5">
    <h1>Empréstimos de Materiais </h1>
    <a class="btn btn-success m-2" asp-controller="Emprestimo" asp-action="Cadastrar">Cadastrar novo empréstimo<i class="bi bi-file-earmark-plus mx-2"></i></a>
</div>


    @if (TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success text-light" role="alert">
            @TempData["MensagemSucesso"]


        </div>
    }

    @if (TempData["MensagemErro"] != null)
    {
        <div class="alert alert-danger text-light" role="alert">
            @TempData["MensagemErro"]


        </div>
    }
<table id="Emprestimos" class="table table-dark table-hover">
    <thead>
        <tr>
            <th scope="col">Nome do Funcionário</th>
            <th scope="col">Recebedor</th>
            <th scope="col">Material Emprestado</th>
            <th scope="col">Última Atualização</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            @foreach (var emprestimo in Model)

            {

                <tr>
                    <th scope="row">@emprestimo.NomeFuncionario</th>
                    <td>@emprestimo.Fornecedor</td>
                    <td>@emprestimo.MaterialEmprestado</td>
                    <td>@emprestimo.DataUltimaAtualizacao</td>
                    <td>
                        <a asp-controller="Emprestimo" asp-action="Editar" asp-route-id="@emprestimo.Id" class="btn btn-warning mx-2"><i class="bi bi-pencil mx-3"></i>Editar</a>
                        <a asp-controller="Emprestimo" asp-action="Excluir" asp-route-id="@emprestimo.Id" class="btn btn-danger mx-2"><i class="bi bi-trash mx-3"></i>Excluir</a>
                    </td>

                </tr>
            }
        }
    </tbody>
    </tbody>
</table>

</div>